    "compilerOptions": {
        "module": "commonjs",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es2016"
    },
    "include": [
        "../node_modules/@types/**/*",
        "*"
    ]
}